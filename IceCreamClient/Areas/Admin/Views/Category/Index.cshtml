@model IEnumerable<IceCreamClient.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<!-- page title area start -->
<div class="page-title-area">
    <div class="row align-items-center">
        <div class="col-sm-6">
            <div class="breadcrumbs-area clearfix">
                <ul class="breadcrumbs pull-left">
                    <li><a href="#">Category</a></li>
                    <li><span>View list</span></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- page title area end -->
<div class="main-content-inner">
    <div class="row">
        <!-- data table start -->
        <div class="col-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">List of Categories</h4>
                    <div class="data-tables">
                        <table id="dataTable3" class="table text-center">
                            <thead class="bg-light text-capitalize">
                                <tr>
                                    <th>Category Id</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Create At</th>
                                    <th>Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CatId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.CreateAt</td>
                                        <td>
                                            @Html.ActionLink("Update", "UpdateCategory", new { CatId = item.CatId })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- data table end -->
    </div>
</div>
<!-- main content area end -->
