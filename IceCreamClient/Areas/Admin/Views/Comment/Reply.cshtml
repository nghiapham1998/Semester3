@model IceCreamClient.Models.Comment
@{
    ViewData["Title"] = "Reply";
}

<!-- page title area start -->
<div class="page-title-area">
    <div class="row align-items-center">
        <div class="col-sm-6">
            <div class="breadcrumbs-area clearfix">
                <ul class="breadcrumbs pull-left">
                    <li><a asp-action="Index" asp-controller="Comment">Comment</a></li>
                    <li><span>Reply</span></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- page title area end -->

<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-6 col-ml-12">
            <div class="row">
                <!-- Textual inputs start -->
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">REPLY COMMENT</h4>
                            @if (TempData["Error"] != null)
                            {
                                <div>
                                    <p style="color: darkred; font-weight: bold;">@TempData["Error"]</p>
                                </div>
                            }
                            <form asp-action="Reply">
                                <input type="hidden" asp-for="@Model.Id" />
                                <div class="form-group">
                                    <label class="col-form-label">Comment Content</label>
                                    <p>@Model.Content</p>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Reply" class="col-form-label"></label>
                                    <textarea class="form-control" asp-for="Reply"></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Reply" class="form-control" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Textual inputs end -->
            </div>
        </div>
    </div>
</div>

