
@{
    ViewData["Title"] = "ChangePassword";
}

<!-- page title area start -->

            <div class="page-title-area">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <div class="breadcrumbs-area clearfix">
                            <ul class="breadcrumbs pull-left">
                                <li><a asp-controller="Home" asp-action="Index">Admin</a></li>
                                <li><span>Change Password</span></li>
                            </ul>
                        </div>
                    </div>                
                </div>
            </div>
<!-- page title area end -->
 <div class="alert-area">         
                <div class="card">
                     <div class="card-body">
                                    @if(ViewData["Success"] != null)
                                    {
                                    <div class="alert alert-success" role="alert">
                                         <strong>Well done!</strong> @ViewData["Success"]
                                    </div>
                                    }
                                    @if(ViewData["Error"] != null){
                                    <div class="alert alert-danger" role="alert">
                                        <strong>Oh snap!</strong> @ViewData["Error"]
                                    </div>
                                    }                        
                      </div>
                  </div>
  </div>
   <div class="main-content-inner">
                <div class="row">
                    <div class="col-lg-12 col-ml-12">
                        <div class="row">
                            <!-- Textual inputs start -->
                            <div class="col-12 mt-5">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Change password</h4>
                                        
                                        <form asp-action="ChangePassword" method="post" asp-controller="Home">
                                        <div class="form-group">
                                            <label for="example-text-input" class="col-form-label">Old Password</label>
                                            <input class="form-control" type="password" name="oldpass" id="example-text-input">
                                        </div>
                                        <div class="form-group">
                                            <label  class="col-form-label">New Password</label>
                                            <input class="form-control" type="password" name="newpass1" id="example-text-input">
                                        </div>                                     
                                        <div class="form-group">
                                            <label  class="col-form-label">Confirm Password</label>
                                            <input class="form-control" type="password" name="newpass2" id="example-text-input">
                                        </div>
                                        <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Change</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Textual inputs end -->
                      </div>
                </div>
            </div>
    </div>

