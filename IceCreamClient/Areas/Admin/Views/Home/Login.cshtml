@model IceCreamClient.Areas.Admin.Models.tbAdmin
@{
    Layout = null;
}
<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Login - srtdash</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="~/assets/images/icon/favicon.ico">
    <link rel="stylesheet" href="/Admin/Data/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/themify-icons.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/metisMenu.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/slicknav.min.css">
    <!-- amchart css -->
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <!-- others css -->
    <link rel="stylesheet" href="/Admin/Data/assets/css/typography.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/default-css.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/styles.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/responsive.css">
    <!-- modernizr css -->
    <script src="/Admin/data/assets/js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- login area start -->
    <div class="login-area">
        <div class="container">
            <div class="login-box ptb--100">
                <form asp-action="Login" asp-controller="Home">
                    <div class="login-form-head">
                        <h4>Admin Login</h4>
                        <p>Login and start managing your Ice Cream Shop</p>
                        <h5 style="color:red;">@ViewData["Error"]</h5>
                    </div>
                    <div class="login-form-body">
                        <div class="form-gp">
                            <label asp-for="Username" for="exampleInputEmail1" ></label>
                            <input asp-for="Username" id="exampleInputEmail1"/>
                            <i class="ti-email"></i>        
                            <div class="text-danger"></div>
                        </div>
                        <div class="form-gp">
                           <label asp-for="Password" for="exampleInputPassword1"></label>
                           <input asp-for="Password" id="exampleInputPassword1" type="password" />
                           <i class="ti-lock"></i>
                           <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="submit-btn-area">
                            <button id="form_submit" type="submit">Login <i class="ti-arrow-right"></i></button>
                            <div class="login-other row mt-4">                                
                            </div>
                        </div>                       
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- login area end -->

    <!-- jquery latest version -->
    <script src="/Admin/Data/assets/js/vendor/jquery-2.2.4.min.js"></script>
    <!-- bootstrap 4 js -->
    <script src="/Admin/Data/assets/js/popper.min.js"></script>
    <script src="/Admin/Data/assets/js/bootstrap.min.js"></script>
    <script src="/Admin/Data/assets/js/owl.carousel.min.js"></script>
    <script src="/Admin/Data/assets/js/metisMenu.min.js"></script>
    <script src="/Admin/Data/assets/js/jquery.slimscroll.min.js"></script>
    <script src="/Admin/Data/assets/js/jquery.slicknav.min.js"></script>
    
    <!-- others plugins -->
    <script src="/Admin/Data/assets/js/plugins.js"></script>
    <script src="/Admin/Data/assets/js/scripts.js"></script>
</body>

</html>