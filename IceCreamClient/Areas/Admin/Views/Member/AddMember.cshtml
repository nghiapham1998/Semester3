 @model IceCreamClient.Models.IMember

@{
    ViewData["Title"] = "AddMember";
}

 <!-- page title area start -->

            <div class="page-title-area">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <div class="breadcrumbs-area clearfix">
                            <ul class="breadcrumbs pull-left">
                                <li><a asp-controller="Member" asp-action="Index">Member</a></li>
                                <li><span>Add Member</span></li>
                            </ul>
                        </div>
                    </div>                
                </div>
            </div>
            <!-- page title area end -->
            <div class="alert-area">         
                <div class="card">
                     <div class="card-body">
                                    @if(ViewData["Success"] != null)
                                    {
                                    <div class="alert alert-success" role="alert">
                                         <strong>Well done!</strong> @ViewData["Success"]
                                    </div>
                                    }
                                    @if(ViewData["Error"] != null){
                                    <div class="alert alert-danger" role="alert">
                                        <strong>Oh snap!</strong> @ViewData["Error"]
                                    </div>
                                    }                        
                      </div>
                  </div>
             </div>
            <div class="main-content-inner">
                <div class="row">
                    <div class="col-lg-12 col-ml-12">
                        <div class="row">
                            <!-- Textual inputs start -->
                            <div class="col-12 mt-5">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Add New Member</h4>
                                        
                                        <form asp-action="AddMember">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                         <div class="form-group">
                                            <label asp-for="Username" class="col-form-label"></label>
                                            <input class="form-control" asp-for="Username" id="example-text-input">
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Email" class="col-form-label"></label>
                                            <input class="form-control" asp-for="Email" id="example-text-input">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Password" class="col-form-label"></label>
                                            <input class="form-control" asp-for="Password" id="example-text-input" type="password">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                         <div class="form-group">
                                            <label asp-for="Password2" class="col-form-label"></label>
                                            <input class="form-control" asp-for="Password2" id="example-text-input" type="password">
                                            <span asp-validation-for="Password2" class="text-danger"></span>
                                        </div>
                                         <div class="form-group">
                                            <label asp-for="Fullname" class="col-form-label"></label>
                                            <input class="form-control" asp-for="Fullname" id="example-text-input">
                                            <span asp-validation-for="Fullname" class="text-danger"></span>
                                        </div>                                     
                                        <div class="form-group">
                                            <label class="col-form-label">Member Option</label>
                                            <select class="custom-select" name="IdMemberOption">
                                                <option value="1">Monthly</option>
                                                <option value="2">Yearly</option>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Create</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Textual inputs end -->
                      </div>
                </div>
            </div>
        </div>
        <!-- main content area end -->


