<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Admin - srtdash</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="/Admin/Data/assets/images/icon/favicon.ico">
    <link rel="stylesheet" href="/Admin/Data/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/themify-icons.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/metisMenu.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/slicknav.min.css">
    <!-- amcharts css -->
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <!-- Start datatable css -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.jqueryui.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="/Admin/Data/assets/css/typography.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/default-css.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/styles.css">
    <link rel="stylesheet" href="/Admin/Data/assets/css/responsive.css">
    <!-- modernizr css -->
    <script src="/Admin/Data/assets/js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- page container area start -->
    <div class="page-container">
        <!-- sidebar menu area start -->
        <div class="sidebar-menu">
            <div class="sidebar-header">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index">Ice-Cream Admin</a>
                </div>
            </div>
            <div class="main-menu">
                <div class="menu-inner">
                    <nav>
                        <ul class="metismenu" id="menu">
                            <li>
                                <a href="javascript:void(0)" aria-expanded="true"><i class="ti-layout-sidebar-left"></i><span>Category</span></a>
                                <ul class="collapse">
                                    <li><a asp-action="CreateCategory" asp-controller="Category">Create new Category</a></li>
                                    <li><a asp-action="Index" asp-controller="Category">List of Categories</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="javascript:void(0)" aria-expanded="true"><i class="fa fa-spoon"></i><span>Recipe</span></a>
                                <ul class="collapse">
                                    <li><a asp-action="Index" asp-controller="Recipe">All Recipe</a></li>
                                    <li><a asp-action="Create" asp-controller="Recipe">Add New Recipe </a></li>
                                </ul>
                            </li>
                             <li>
                                <a href="javascript:void(0)" aria-expanded="true"><i class="fa fa-table"></i><span>Book</span></a>
                                <ul class="collapse">
                                    <li><a asp-action="CreateBook" asp-controller="Book">Create new Book</a></li>
                                    <li><a asp-action="ShowBooks" asp-controller="Book">List of Books</a></li>
                                </ul>
                            </li>
                            <li>
                                <a  asp-controller="Order" asp-action="Index"><i class="ti-receipt"></i> <span>Order</span></a>
                            </li>
                            <li>
                                <a href="javascript:void(0)" aria-expanded="true"><i class="ti-palette"></i><span>Member</span></a>
                                <ul class="collapse">
                                    <li><a asp-controller="Member" asp-action="Index">All Member</a></li>
                                    <li><a asp-controller="Member" asp-action="AddMember">Add New Member</a></li>
                                </ul>
                            </li>
                            <li>
                                <a asp-controller="Feedback" asp-action="Index"><i class="ti-slice"></i><span>Feedback</span></a>
                            </li>                                                                                 
                            <li>
                                <a href="javascript:void(0)" aria-expanded="true"><i class="fa fa-align-left"></i> <span>Comment</span></a>
                                <ul class="collapse">
                                    <li><a asp-action="Index" asp-controller="Comment">All Comment</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="javascript:void(0)" aria-expanded="true"><i class="ti-layers-alt"></i> <span>Admin</span></a>
                                <ul class="collapse">
                                    <li><a asp-action="ViewAll" asp-controller="Home">All Admin</a></li>
                                    <li><a asp-action="ChangePassword" asp-controller="Home">Change Password</a></li>
                                    <li><a asp-action="AddAdmin" asp-controller="Home">Add New Admin</a></li>
                                    <li><a asp-action="Logout" asp-controller="Home">Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- sidebar menu area end -->
        <!-- main content area start -->
        <div class="main-content">
            <!-- header area start -->
            <div class="header-area">
                <div class="row align-items-center">
                    <!-- nav and search button -->
                    <div class="col-md-6 col-sm-8 clearfix">
                        <div class="nav-btn pull-left">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>   
                    </div>
                    <!-- profile info & task notification -->
                    <div class="col-md-6 col-sm-4 clearfix">
                        <ul class="notification-area pull-right">
                            <li id="full-view"><i class="ti-fullscreen"></i></li>
                            <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- header area end -->
           @RenderBody()
        </div>
        <!-- main content area end -->
        <!-- footer area start-->
        <footer>
            <div class="footer-area">
                <p>© Copyright 2021. FPT - T12008M0.</p>
            </div>
        </footer>
        <!-- footer area end-->
    </div>
    <!-- page container area end -->
    <!-- jquery latest version -->
    <script src="/Admin/Data/assets/js/vendor/jquery-2.2.4.min.js"></script>
    <!-- bootstrap 4 js -->
    <script src="/Admin/Data/assets/js/popper.min.js"></script>
    <script src="/Admin/Data/assets/js/bootstrap.min.js"></script>
    <script src="/Admin/Data/assets/js/owl.carousel.min.js"></script>
    <script src="/Admin/Data/assets/js/metisMenu.min.js"></script>
    <script src="/Admin/Data/assets/js/jquery.slimscroll.min.js"></script>
    <script src="/Admin/Data/assets/js/jquery.slicknav.min.js"></script>

    <!-- Start datatable js -->
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.18/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap.min.js"></script>
    <!-- others plugins -->
    <script src="/Admin/Data/assets/js/plugins.js"></script>
    <script src="/Admin/Data/assets/js/scripts.js"></script>

    @if (IsSectionDefined("Scripts"))
            {
                @RenderSection("Scripts")
            } 
</body>

</html>
