@model IceCreamClient.Models.Member

@{
    ViewData["Title"] = "Login";
}
@section Style
{
    <link href="~/assets/Validation/style.css" rel="stylesheet">
}
<!--Page Title-->
        <section class="page-title centred" style="background-image: url(/assets/images/background/page-title.jpg);">
            <div class="auto-container">
                <div class="content-box">
                    <div class="title">
                        <h1>Login</h1>
                    </div>
                    <ul class="bread-crumb clearfix">
                        <li><a href="index.html">Home</a></li>
                        <li>Login</li>
                    </ul>
                </div>
            </div>
        </section>
        <!--End Page Title-->


        <!-- contact-section -->
        <section class="contact-section alternet-2 sec-pad" style="background-image: url(/assets/images/background/contact-3.jpg);">
            <div class="auto-container">
                <div class="row clearfix">
                    <div class="col-lg-4 col-md-6 col-sm-12 info-column">
                        <div class="contact-info-inner">                           
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-6 col-sm-12 form-column">
                        <div >
                            <form method="post" asp-action="Login" asp-controller="Member" id="form" class="default-form"> 
                                @if(ViewData["errorLogin"] != null){
                                      <div style="color:red;">@ViewData["errorLogin"]</div>
                                }
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                        <i class="fas fa-user"></i><label for="username">User Name*</label>
                                        <input type="text" asp-for="Username"  id="username">
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>                             
                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                        <i class="fas fa-lock"></i><label for="password">Password*</label>
                                        <div>
                                        <input type="password" asp-for="Password" id="password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>                            
                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                                        <button class="theme-btn-one" type="submit" name="submit-form">Login</button>
                                    </div>
                                </div>
                            </form>                          
                        </div>
                    </div>
                </div>
            </div>
        </section>



  

